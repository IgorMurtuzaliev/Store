@model MyStore.ViewModels.CartIndexViewModel
@{
    ViewBag.Title = "Index";
}

<h2>Cart</h2>
<table class="table">
    <thead>
        <tr>
            <th>Quantity</th>
            <th>Item</th>
            <th>Price</th>
            <th>Subtotal</th>
        </tr>
    </thead>
    <tbody>
        @foreach(var line in Model.Cart.Lines)
        { 
        <tr>
            <td>@line.Quantity</td>
            <td>@line.Product.Name</td>
            <td>@line.Product.Price.ToString("c")</td>
            <td>@((line.Quantity * line.Product.Price).ToString("c"))</td>
            <td>@Html.ActionLink("Remove", "RemoveFromCart", new { id = line.Product.ProductId})</td>
        </tr>
        }
    </tbody>
    <tfoot>
        <tr>
          Total sum:  @Model.Cart.Totalvalue().ToString("c")
        </tr>
    </tfoot>
</table>

